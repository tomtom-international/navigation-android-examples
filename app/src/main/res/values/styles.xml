<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:windowBackground">@drawable/dialog_background_rounded</item>
    </style>

    <style name="ToolbarTitleTextAppearance" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:gravity">center</item>
    </style>

    <style name="MainMenuTitle">
        <item name="android:textColor">@color/tt_color_title_light</item>
        <item name="android:fontFamily">@font/noto_sans_semi_bold</item>
        <item name="android:textSize">@dimen/main_menu_title_text_size</item>
        <item name="lineHeight">@dimen/main_menu_title_line_height</item>
        <item name="android:text">@string/main_menu</item>
        <item name="android:textAlignment">center</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="MainMenuNavigationButton">
        <item name="android:layout_marginStart">
            @dimen/main_menu_navigation_button_margin_horizontal
        </item>
        <item name="android:layout_marginEnd">@dimen/main_menu_navigation_button_margin_horizontal
        </item>
        <item name="android:padding">@dimen/main_menu_navigation_button_padding</item>
        <item name="android:fontFamily">@font/noto_sans_semi_bold</item>
        <item name="android:textSize">@dimen/main_menu_navigation_button_text_size</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
        <item name="cornerRadius">@dimen/main_menu_navigation_button_corner_radius</item>
        <item name="iconSize">32dp</item>
        <item name="android:shadowDy">0</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="TomTomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/TomTomModalStyle</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="TomTomModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/map_options_dialog_background</item>
        <item name="android:paddingStart">@dimen/full_padding</item>
        <item name="android:paddingEnd">@dimen/full_padding</item>
    </style>

    <style name="BottomSheetDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/bottom_sheet_slide_up</item>
        <item name="android:windowExitAnimation">@anim/bottom_sheet_slide_down</item>
    </style>

</resources>
